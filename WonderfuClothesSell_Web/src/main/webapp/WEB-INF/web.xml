<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" metadata-complete="false" version="4.0">
  <display-name>WarmCuisineSite_Web</display-name>
  <servlet>
    <description>Login使用的驗證碼</description>
    <servlet-name>com.wcs.view.CaptchaServlet_Login</servlet-name>
    <servlet-class>com.wcs.view.CaptchaServlet</servlet-class>
    <init-param>
      <param-name>len</param-name>
      <param-value>4</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.wcs.view.CaptchaServlet_Login</servlet-name>
    <url-pattern>/images/login_captcha.jpg</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>register和update使用的驗證碼</description>
    <servlet-name>com.wcs.view.CaptchaServlet</servlet-name>
    <servlet-class>com.wcs.view.CaptchaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.wcs.view.CaptchaServlet</servlet-name>
    <url-pattern>/images/captcha.jpg</url-pattern>
    <url-pattern>/member/images/captcha.jpg</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <security-constraint>
    <display-name>user_constraints</display-name>
    <web-resource-collection>
      <web-resource-name>all</web-resource-name>
      <description></description>
      <url-pattern>/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
</web-app>